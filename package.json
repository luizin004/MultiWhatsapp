{
  "name": "vigia-monorepo",
  "private": true,
  "workspaces": [
    "apps/*"
  ],
  "scripts": {
    "dev:frontend": "npm run dev --workspace @vigia/frontend",
    "dev:backend": "npm run dev --workspace @vigia/backend",
    "build": "npm run build --workspace @vigia/frontend && npm run build --workspace @vigia/backend",
    "start:frontend": "npm run start --workspace @vigia/frontend",
    "start:backend": "npm run start --workspace @vigia/backend"
  }
}
